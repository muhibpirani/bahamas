<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ImagViewActivity"
    android:background="@android:color/black">

  <TextView
      android:id="@+id/txt_close"
      android:text="X"
      android:layout_margin="10dp"
      android:textSize="25sp"
      android:padding="10dp"
      android:textColor="@android:color/white"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  <com.island.islandhistory.ZoomableImageView
      android:id="@+id/img_view_map"
      android:layout_below="@+id/txt_close"
      android:src="@drawable/bahamas_map"
      android:transitionName="map_transition"
      android:scaleType="fitXY"
      android:layout_centerInParent="true"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />


</RelativeLayout>